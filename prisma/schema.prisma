datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User{
    id String @id @default(uuid())
    username String
    email String
    password String
    role String
    borrows BorrowingData[]
}

model BorrowingData{
    id String @id @default(uuid())
    user User @relation(fields: [userId], references: [id])
    userId String @unique
    startTime DateTime
    endTime DateTime?
    from Int
    to Int
    classroom ClassroomData @relation(fields: [classroomId], references: [id])
    classroomId String
}

model ClassroomData{
    id String @id @default(uuid())
    name String
    place String
    description String
    addedTime DateTime
    updatedTime DateTime
    borrowingDatas BorrowingData[]
}

